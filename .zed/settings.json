{
    "lsp": {
        "eslint": {
            "settings": {
                "options": {
                    "flags": ["--no-warn-ignored"],
                },
            },
        },
        "typescript-language-server": {
            "settings": {
                "typescript": {
                    "preferences": {
                        "importModuleSpecifier": "non-relative",
                    },
                },
                "javascript": {
                    "preferences": {
                        "importModuleSpecifier": "non-relative",
                    },
                },
            },
        },
    },
    "languages": {
        "TypeScript": {
            "formatter": {
                "external": {
                    "command": "npx",
                    "arguments": ["biome", "format", "--stdin-file-path", "{buffer_path}"],
                },
            },
        },
        "TSX": {
            "formatter": {
                "external": {
                    "command": "npx",
                    "arguments": ["biome", "format", "--stdin-file-path", "{buffer_path}"],
                },
            },
        },
    },
}
