{
    "name": "poa-arbeidssokerregistrering-veileder",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "next dev | pino-pretty",
        "build": "next build",
        "start": "next start",
        "lint": "eslint .",
        "test": "npm run lint && jest --watch",
        "test:app": "vitest --run",
        "test:app:watch": "vitest",
        "test:ci": "npm run lint && jest && vitest --run",
        "refresh": "rm -rf node_modules && rm package-lock.json && npm i --ignore-scripts",
        "prepare": "husky",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "format:app": "biome check --write src/app",
        "format:legacy": "prettier --write 'src/!(app)/**/*.{js,jsx,ts,tsx,json,md}'"
    },
    "dependencies": {
        "@grafana/faro-web-sdk": "2.2.0",
