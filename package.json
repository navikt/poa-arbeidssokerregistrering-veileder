        "@navikt/arbeidssokerregisteret-utils": "2.0.0",
        "@navikt/ds-css": "8.1.0",
        "@navikt/ds-react": "8.1.0",
        "@navikt/ds-tailwind": "8.1.0",
        "@navikt/next-logger": "4.4.4",
        "@navikt/oasis": "4.1.1",
        "@unleash/nextjs": "1.6.4",
        "classnames": "2.5.1",
        "loadjs": "4.3.0",
        "lodash": "4.17.23",
        "nanoid": "5.1.6",
        "next": "16.1.6",
        "pino": "10.3.0",
        "react": "19.2.4",
        "react-autosuggest": "10.1.0",
        "react-dom": "19.2.4",
        "swr": "2.3.8"
