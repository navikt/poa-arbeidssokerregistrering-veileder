        "@storybook/addon-docs": "10.2.1",
        "@storybook/addon-onboarding": "10.2.1",
        "@storybook/nextjs": "10.2.1",
        "@storybook/nextjs-vite": "10.2.1",
        "@tailwindcss/postcss": "4.1.18",
        "@testing-library/jest-dom": "6.9.1",
        "@testing-library/react": "16.3.2",
        "@types/jest": "30.0.0",
        "@types/node": "25.0.10",
        "@types/react": "19.2.10",
        "@types/react-dom": "19.2.3",
        "eslint": "9.39.2",
        "eslint-config-next": "16.1.6",
        "husky": "9.1.7",
        "jest": "30.2.0",
        "jest-environment-jsdom": "30.2.0",
        "jsdom": "28.1.0",
        "knip": "5.82.1",
        "lint-staged": "16.2.7",
        "msw": "2.12.7",
        "msw-storybook-addon": "2.0.6",
        "pino-pretty": "13.1.3",
        "postcss": "8.5.6",
        "prettier": "3.8.1",
        "storybook": "10.2.1",
        "tailwindcss": "4.1.18",
        "typescript": "5.9.3",
        "vitest": "4.0.18"
    },
    "prettier": {
        "printWidth": 120,
        "singleQuote": true,
        "tabWidth": 4
    },
    "lint-staged": {
        "src/app/**/*.{js,jsx,json,ts,tsx}": "biome check --write",
        "src/!(app)/**/*.{js,jsx,json,ts,tsx}": "prettier --write",
        "*.{js,jsx,json,ts,tsx}": "prettier --write"
    },
    "engines": {
        "node": ">=24.13.0"
    },
    "msw": {
        "workerDirectory": [
            "public"
