{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "enabled": true,
        "indentWidth": 4,
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    },
    "files": {
        "include": ["src/app/**"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    }
}
